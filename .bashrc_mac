# .bashrc_mac
# .bashrc for Mac

# Setting
# $ cd ~/
# $ ln -s /path/to/.bashrc_mac .

# Source global definitions
if [ -f /etc/bashrc ]; then
    . /etc/bashrc
fi

####################################################################################################
# General settings
####################################################################################################
# PROMPT
PS1='[\u@\h \w] \$ '

# PATH
export PATH=$PATH:/opt/local/bin:/opt/local/sbin:~/local/bin/

# PATH for android
export PATH=$PATH:/Users/issei/Library/android-sdk-mac_x86/platform-tools
export PATH=$PATH:/Users/issei/Library/android-sdk-mac_x86/tools
export MANPATH=/opt/local/man:$MANPATH

####################################################################################################
# Vars
####################################################################################################
## TERM
# export TERM=xterm
# export TERM=xterm-256color
export bulldozer=/Users/issei/development/bulldozer/api/rails/bulldozer
export RAILS_ENV=development

####################################################################################################
# Aliases
####################################################################################################
alias vi=vim
alias ll="ls -l"
# alias zf=/var/lib/ZendFramework/bin/zf.sh
# alias tmux="tmux -2"
alias mysql="mysql5"
alias mysqlctl="sudo /opt/local/share/mysql5/mysql/mysql.server"

# ls 
alias ls="ls -F"
alias rm="rm -f"
